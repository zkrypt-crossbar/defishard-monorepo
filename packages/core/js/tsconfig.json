{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "../dist",
    "rootDir": ".",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "emitDeclarationOnly": false,
    "jsx": "preserve",

  },
  "include": [
    "**/*.ts", "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
} 